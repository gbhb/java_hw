<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gmail.andrewchouhs.controllerAndView.MainPageController">
   <bottom>
      <ToolBar BorderPane.alignment="CENTER">
         <items>
            <Button mnemonicParsing="false" onAction="#addScheduleButton" text="%MainPage.Button.Add" />
            <Button mnemonicParsing="false" onAction="#moveUp" text="%MainPage.Button.MoveUp" />
            <Button mnemonicParsing="false" onAction="#moveDown" text="%MainPage.Button.MoveDown" />
            <Button mnemonicParsing="false" onAction="#scaleUp" text="%MainPage.Button.ScaleUp" />
            <Button mnemonicParsing="false" onAction="#scaleDown" text="%MainPage.Button.ScaleDown" />
         </items>
      </ToolBar>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%MainPage.Menu.Settings">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showSettingsPage" text="%MainPage.Menu.Settings" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="%MainPage.Menu.Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="%MainPage.Menu.Help" />
               </items></Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
